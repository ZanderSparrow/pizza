<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <div class="container">
    <h1>Your videos that you saved!</h1>
    <p>Click the button below to add a video from YouTube.</p>
    <p>
      <%= link_to 'Add video now!', new_video_path, class: 'btn btn-primary btn-lg' %>
    </p>
  </div>
</div>

<% if @videos.any? %>
  <div class="container">
    <h1>Latest videos</h1>
    <div id="player-wrapper"></div>
    <% @videos.in_groups_of(3) do |group| %>
      <div class="row">
        <% group.each do |video| %>
          <% if video %>
            <div class="col-md-4">
              <div class="yt_video thumbnail">
                <%= link_to image_tag("https://img.youtube.com/vi/#{video.video_id}/mqdefault.jpg", alt: video.title,
                                      class: 'img-rounded'),
                            "https://www.youtube.com/watch?v=#{video.video_id}", target: '_blank' %>
                <div class="caption">
                  <h5><%= video.title %></h5>
                  <p>
                  <p><%= link_to 'Destroy', video, method: :delete, data: { confirm: 'Are you sure?' } %></p>
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>




